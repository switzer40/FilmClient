@page
@model FilmClient.Pages.FilmPerson.CreateModel
@{
    ViewData["Title"] = "Create A New Film/Person Relation";
}

<h2>@ViewData["Title"]</h2>
<div class="text-info">
    <p>
        Note:<br />
        Before you can create a new Film/Person relation<br />
        you should be sure that the film and person involved<br />
        are already in the collection.
    </p>
</div>
<hr />
<h4>The FilmPerson to ADD</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FilmPersonToAdd.Title" class="control-label"></label>
                <input asp-for="FilmPersonToAdd.Title" class="form-control" autofocus />
                <span asp-validation-for="FilmPersonToAdd.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FilmPersonToAdd.Year" class="control-label"></label>
                <input asp-for="FilmPersonToAdd.Year" class="form-control" />
                <span asp-validation-for="FilmPersonToAdd.Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FilmPersonToAdd.LastName" class="control-label"></label>
                <input asp-for="FilmPersonToAdd.LastName" class="form-control" />
                <span asp-validation-for="FilmPersonToAdd.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FilmPersonToAdd.Birthdate" class="control-label"></label>
                <input asp-for="FilmPersonToAdd.Birthdate" class="form-control" />
                <span asp-validation-for="FilmPersonToAdd.Birthdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                @{
                    var actor = FilmAPI.Common.Constants.FilmConstants.Role_Actor;
                    var composer = FilmAPI.Common.Constants.FilmConstants.Role_Composer;
                    var director = FilmAPI.Common.Constants.FilmConstants.Role_Director;
                    var writer = FilmAPI.Common.Constants.FilmConstants.Role_Writer;
                }
                <label asp-for="FilmPersonToAdd.Role" class="control-label"></label>
                <input type="radio" asp-for="FilmPersonToAdd.Role" value="@actor" checked />@actor
                <input type="radio" asp-for="FilmPersonToAdd.Role" value="@composer" />@composer
                <input type="radio" asp-for="FilmPersonToAdd.Role" value="@director" />@director
                <input type="radio" asp-for="FilmPersonToAdd.Role" value="@writer" />@writer
                <span asp-validation-for="FilmPersonToAdd.Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

