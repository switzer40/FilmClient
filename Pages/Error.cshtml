@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            @if (Model.ErrorStatus != null)
            {
                <strong>Error Status</strong> @Model.ErrorStatus.Value
                <h3>@Model.ErrorStatus.ReasonForFailure</h3>
             }
            @if (Model.ShowRequestId)
            {
                <p>
                    <strong>Request ID:</strong> <code>@Model.RequestId</code>
                </p>
             }            
        </div>
    </div>
</div>
